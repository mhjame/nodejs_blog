<div class="mt-4">
    <h3> Chỉnh sửa khóa học </h3>

    <form class = "mt-4" method="post" action = "/courses/{{course._id}}?_method=PUT">
         <div class="form-group">
            <label for="name"> Name </label>
            <input type="text" class="form-control" value = "{{course.name}}" id="description" name = "name">  
        </div>

        <div class="form-group">
            <label for="description"> Mô tả </label>
            <textarea type="text" class="form-control" id="description" name = "description"> {{course.description}} </textarea>
        
        </div>

         <div class="form-group">
            <label for="videoId"> Video ID </label>
            <input type="text" class="form-control" value = "{{course.videoId}}"id="description" name = "videoId">  
        </div>

        <button type="submit" class="btn btn-primary"> Cập nhật </button>
    </form>

</div>